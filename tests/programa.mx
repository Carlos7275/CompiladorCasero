// Declaraciones y asignaciones de variables
Entero valorNumerico = 10;
Cadena mensajeBienvenida = "Bienvenido al mundo de ";
Cadena nombreLenguaje = "mi lenguaje!";
Flotante precioUnitario = 15.75; // Asumiendo que 'Flotante' es un tipo de dato válido

// Sentencia Mostrar con múltiples argumentos
Mostrar(mensajeBienvenida, nombreLenguaje, " Version 1.0");

// Sentencia Leer
// Leer(nombreLenguaje); // Descomenta si quieres probar la entrada de usuario

// Bucle Mientras con una condición compleja
Mientras(valorNumerico > 0 && precioUnitario < 20.0 || valorNumerico == 5){
    Mostrar("Iteracion actual: ", valorNumerico);
    
    // Asignación dentro del bucle
    valorNumerico = valorNumerico - 1; 

    // Sentencia condicional Si-Sino Si-Sino anidada
    Si(valorNumerico == 7){
        Mostrar("Valor numerico es 7.");
    }
    Sino Si(valorNumerico == 3){
        Mostrar("Valor numerico es 3. Casi al final!");
    }
    Sino{
        Mostrar("Valor numerico es: ", valorNumerico, ". Continuando...");
    }
}

Mostrar("Bucle Mientras finalizado. Valor final: ", valorNumerico);

// Bucle Para con inicialización de variable y operador de incremento
Para(Entero i = 0; i < 5; i++){
    Mostrar("Bucle Para - Indice: ", i);
    // Asignacion y operacion aritmetica
    valorNumerico = valorNumerico + i; 
}

Mostrar("Bucle Para finalizado. Nuevo valor numerico: ", valorNumerico);

// Otra sentencia Si-Sino con condiciones simples
Si(valorNumerico >= 15){
    Mostrar("Valor numerico es grande!");
}
Sino{
    Mostrar("Valor numerico es pequeño.");
}

// Asignación con una expresión más compleja
Entero resultadoCalculo = (valorNumerico * 2 + 5) / 3;
Mostrar("El resultado del calculo es: ", resultadoCalculo);

